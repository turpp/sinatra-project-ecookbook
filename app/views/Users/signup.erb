<%=flash[:message]%>

<h1 class="display-3">Create Account</h1>
<form class="form-signin"method='post' action="user/signup">
  <img class="rounded mx-auto d-block" src="https://image.flaticon.com/icons/png/512/113/113339.png" alt="" width="84" height="84">
<br>
<label for="new_name" class="sr-only">Userame:</label>
<input type='text' name='user[username]' class="form-control" placeholder="Username">
<label for='new_password'class="sr-only" >Password:</label>
<input type='password' name='user[password_digest]' class="form-control" placeholder="password">
<label for='retyped_password' class="sr-only">Confirm Password</label>
<input type='password' name='retyped_password' class="form-control" placeholder="Confirm Password">
  <button class="btn btn-lg btn-primary btn-block" type="submit">Let's Start Cooking!</button>

</form>






