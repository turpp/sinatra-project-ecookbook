<h1><em>Cookmode!</em></h1>

<h2 class="display-2"><%=@recipe.name%></h2>
 <small class="text-muted">
<h5><%=@recipe.recipeType.name%></h5>
</small>

<br>




<div class="card" style="width: 40rem;">
  <div class="card-header">
<p class="lead"><strong>Ingredients:</strong></p>
</div>
<ul class="list-group list-group-flush">
    <%@ingredients.each do |i|%>
    <li class="list-group-item"><input type='checkbox'> <%=i%></input></li>
    
    <br>
    <% end %>
    </ul>
</div>

<br>
<br>
<div class="card" style="width: 40rem;">
  <div class="card-header">

<p class="lead"><strong>Steps:</strong></p>
</div>

<ul class="list-group list-group-flush">
    <%@steps.each do |i|%>
        <li class="list-group-item"><input type='checkbox'> <%=i%></input></li>

    <br>
    <% end %>
    </ul>


</div>
<br>
<br>
